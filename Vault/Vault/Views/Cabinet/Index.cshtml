@model IEnumerable<Vault.Data.ViewModels.CabinetModel>

@{
  ViewBag.Title = "Home Page";
}

<div class="jumbotron">
  <h1>ASP.NET</h1>
  <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
  <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<input type="button" class="btn btn-success" value="Create" onclick="location.href='@Url.Action("Create", "Cabinet")'" />

<div class="row">
  <table class="table table-bordered table-striped sortable">
    <thead>
      <tr>
        <th id="triggerId">@Html.DisplayNameFor(x => x.Id)</th>
        <th id="triggerName">@Html.DisplayNameFor(x => x.Name)</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var i in Model)
      {
        <tr>
          <td>@Html.DisplayFor(x => i.Id)</td>
          <td>@Html.DisplayFor(x => i.Name)</td>
        </tr>
      }
    </tbody>
  </table>

</div>